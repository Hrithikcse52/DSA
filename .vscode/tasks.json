{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "g++",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-g",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-std=c++20"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
